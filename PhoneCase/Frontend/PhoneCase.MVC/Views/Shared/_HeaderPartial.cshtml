<header class="main_menu home_menu">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <a class="navbar-brand" href="~/">
                        <img src="~/ui/img/kose.png" style="width:100px; height: 50px">
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="menu_icon"><i class="fas fa-bars"></i></span>
                    </button>

                    <div class="collapse navbar-collapse main-menu-item" id="navbarSupportedContent">
                        <ul class="navbar-nav">
                            @await Html.PartialAsync("_HeaderMenuPartial")
                        </ul>
                        <ul class="navbar-nav ms-auto d-flex align-items-center">
                            <li style="margin-left:105px;">
                                <span style="color:black;">
                                    @await Component.InvokeAsync("CartInfo")
                                </span>
                            </li>
                            <li style="margin-left:25px;">
                                <a id="search_1" href="javascript:void(0)">
                                    <i class="ti-search"></i>
                                </a>
                            </li>
                            <li style="margin-left:20px;">
                                @await Component.InvokeAsync("Favorite", new {
                                userId = User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value
                                                                })
                            </li>

                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <div class="search_input" id="search_input_box">
        <div class="container ">
            <form class="d-flex justify-content-between search-inner">
                <input type="text" class="form-control" id="search_input" placeholder="Ürün ya da kategori adı">
                <button type="submit" class="btn"></button>
                <span class="ti-close" id="close_search" title="Close Search"></span>
            </form>
        </div>
    </div>
</header>
