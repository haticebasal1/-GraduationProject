@using Microsoft.AspNetCore.Mvc.Rendering
@model CategoryCreateDto

@{
    ViewData["Title"] = "Yeni Kategori Oluştur";
}

<div class="page-header">
    <div class="w-100 d-flex align-items-center justify-content-between">
        <h3 class="fw-bold mb-3">PhoneCase - YENİ KATEGORİ OLUŞTUR</h3>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-area="Admin" asp-controller="Category" asp-action="Create" method="post"
            enctype="multipart/form-data">
            <div class="card p-3">
                <div class="form-group mb-3">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Kategori adını yazınız..." />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="5"
                        placeholder="Kategori açıklamasını yazınız..."></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Image"></label>
                    <input asp-for="Image" type="file" class="form-control-file" />
                    <span class="text-danger" asp-validation-for="Image"></span>
                    <div class="mt-2">
                        <img id="image-preview" style="max-height: 150px; object-fit: contain;" src="" alt="">
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label for="Type">Kategori Tipi</label>
                    <select asp-for="Type" class="form-control"
                        asp-items="@(ViewBag.CategoryTypes as List<SelectListItem>)">
                        <option value="">Seçiniz</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Type"></span>
                </div>

                <button type="submit" class="btn btn-success">Kaydet</button>
            </div>
        </form>
    </div>
</div>

@section StylesSection{
    
}
@section ScriptsSection {
    <script>
        document.getElementById("Image").addEventListener('change', function (e) {
            let image = e.target.files[0];
            if (image) {
                let reader = new FileReader();
                reader.onload = function (event) {
                    document.getElementById('image-preview').src = event.target.result;
                }
                reader.readAsDataURL(image);
            }
        })
    </script>
}