@model OrderDto
@{
    ViewData["Title"] = "Details";
}

<div class="page-header">
    <div class="w-100 d-flex align-items-center justify-content-between">
        <h3 id="head_title" class="fw-bold mb-3">@Model.Id id'li Sipariş Detayı</h3>
        
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
       <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Ürün</th>
                <th>Adet</th>
                <th>Fiyat</th>
                <th>Tutar</th>
            </tr>
        </thead>
        <tbody>
            @foreach(OrderItemDto orderItem in Model.OrderItems)
            {
                <tr>
                    <td>@orderItem.ProductName</td>
                    <td>@orderItem.Quantity</td>
                    <td>@($"{orderItem.UnitPrice:C2}")</td>
                    <td>@($"{orderItem.ItemAmount:C2}")</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td>
                    <a class="btn btn-primary" asp-area="Admin"asp-controller="Order" asp-action="Index" asp-route-isDeleted=@false>Sipariş Listesine Dön</a>
                </td>
                <td></td>
                <td class="text-end">Toplam:</td>
                <td class="text-danger fw-bold">@($"{Model.TotalAmount:C2}")</td>
            </tr>
        </tfoot>
       </table>
        </div>
    </div>
</div>